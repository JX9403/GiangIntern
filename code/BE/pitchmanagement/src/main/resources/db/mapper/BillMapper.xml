<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pitchmanagement.dao.BillDao">
    <insert id="insertBill" parameterType="com.pitchmanagement.model.request.BillRequest">
        INSERT INTO bill (create_at, note, pitch_booking_id)
        VALUES (#{createAt}, #{note}, #{pitchBookingId});
    </insert>

    <resultMap id="result" type="com.pitchmanagement.dto.admin.PaymentDto">
        <result property="id" column="id"/>
        <result property="create_at" column="createAt"/>
        <result property="note" column="note"/>
        <result property="time_book" column="timeBook"/>
        <result property="name_pitch" column="namePitch"/>
        <result property="address" column="address"/>
        <result property="full" column="timeBook"/>
    </resultMap>
</mapper>