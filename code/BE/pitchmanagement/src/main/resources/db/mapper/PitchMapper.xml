<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pitchmanagement.dao.PitchDao">
    <insert id="insertPitch" parameterType="com.pitchmanagement.model.request.PitchRequest">
        INSERT INTO `pitch` (`name`, `address`, `create_at`, `pitch_type_id`)
        VALUES (#{name}, #{address}, #{createAt}, #{pitchTypeId});
    </insert>

    <select id="searchPitch" parameterType="">
        SELECT
            p.id,
            p.name,
            p.address,
            p.create_at AS createAt,
            p.update_at AS updateAt,
            pt.id AS pitchTypeId
        FROM pitch p
        RIGHT JOIN pitch_type pt ON pt.id = p.pitch_type_id
    </select>
</mapper>